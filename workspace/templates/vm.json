{
  "builders": [{
          "type": "vmware-iso",
          "boot_command": [ 
            "<wait15>",
            "{{ user `vm_boot_command` }}",
            "<enter>"
          ],
          "iso_url":"http://repo.home.local/artifactory/files/ipxe/ipxe.iso",
          "iso_checksum":"30ff40de8c5f2dd369c0e709e861e048",
          "vm_name": "{{ user `vm_hostname` }}",
          "ssh_username": "{{ user `vm_username` }}",
          "ssh_private_key_file": "~/.ssh/id_rsa",
          "ssh_timeout": "25m",
          "shutdown_command": "sudo shutdown -P now",
          "remote_type": "esx5",
          "remote_host": "{{ user `esx_server`}}",
          "remote_username": "builder",
          "remote_password": "{{ user `esx_password`}}",
          "remote_port": "22",
          "remote_datastore": "{{ user `esx_datastore` }}",
          "remote_cache_datastore": "{{ user `esx_datastore` }}",
          "remote_cache_directory": "packer_cache",
          "guest_os_type": "{{ user `vm_guest_os_type`}}",
          "cpus": "{{ user `vm_cpus` }}",
          "memory": "{{ user `vm_memory` }}",
          "version": "15",
          "network_adapter_type": "vmxnet3",
          "vmx_data": {
              "ethernet0.networkName": "{{ user `esx_network` }}",
              "numa.autosize.once" : "false",
              "numa.autosize" : "true",
              "mem.hotadd" : "true",
              "vcpu.hotadd" : "true",
              "vmxnet3.rev.30": "false"
          },
          "disk_adapter_type": "{{ user `vm_disk_adapter_type` }}",
          "disk_size": "{{ user `vm_disk_size` }}",
          "keep_registered":true,
          "skip_export": true,
          "disk_type_id": "thin",
          "format": "vmx",
	  "vnc_over_websocket": "true",
	  "insecure_connection": "true",
	  "skip_validate_credentials": "true"
    }
  ],
  "provisioners":[
    {
      "type":"ansible-local",
      "extra_arguments": [ "-e vm_hostname={{ user `vm_hostname` }}" ],
      "playbook_file":"/workspace/playbooks/main.yml",
      "playbook_dir":"/workspace/playbooks"
    }
   ]
}
