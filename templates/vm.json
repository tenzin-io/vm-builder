{
  "builders": [{
          "type": "vmware-iso",
          "boot_command": [ 
            "<wait>",
            "{{ user `vm_boot_command` }}",
            "<enter>"
          ],
          "iso_url":"http://repo/artifactory/packer-httpdir/ipxe/ipxe.iso",
          "iso_checksum":"660133790495615079577e521890e9cbb746a38f5497edce304fb64244bd19f6",
          "vm_name": "{{ user `vm_hostname` }}",
          "ssh_username": "{{ user `vm_username` }}",
          "ssh_password": "{{ user `vm_password` }}",
          "ssh_timeout": "25m",
          "shutdown_command": "poweroff",
          "remote_type": "esx5",
          "remote_host": "{{ user `esx_build_server` }}",
          "remote_username": "{{ user `esx_build_username` }}",
          "remote_password": "{{ user `esx_build_password` }}",
          "remote_port": "22",
          "remote_datastore": "{{ user `esx_build_datastore` }}",
          "remote_cache_datastore": "{{ user `esx_build_datastore` }}",
          "remote_cache_directory": "packer_cache",
          "guest_os_type": "{{ user `vm_guest_os_type`}}",
          "cpus": "{{ user `vm_cpus` }}",
          "memory": "{{ user `vm_memory` }}",
          "version": "15",
          "network_adapter_type": "vmxnet3",
          "vmx_data": {
              "ethernet0.networkName": "{{ user `esx_build_network` }}",
              "numa.autosize.once" : "false",
              "numa.autosize" : "true",
              "mem.hotadd" : "true",
              "vcpu.hotadd" : "true",
              "vmxnet3.rev.30": "false",
              "vhv.enable": "{{ user `vm_vhv` }}",
              "hpet0.present": "{{ user `vm_hpet` }}"
          },
          "disk_adapter_type": "{{ user `vm_disk_adapter_type` }}",
          "disk_size": "{{ user `vm_disk_size` }}",
          "keep_registered": "true",
          "skip_export": "true",
          "disk_type_id": "thin",
          "format": "vmx",
	  "vnc_over_websocket": "true",
	  "insecure_connection": "true",
	  "skip_validate_credentials": "true"
    }
  ],
  "provisioners":[
    {
      "type":"shell",
      "environment_vars": [ "VM_HOSTNAME={{ user `vm_hostname` }}" ],
      "script": "{{ user `vm_bootstrap_script` }}"
    }
   ]
}
